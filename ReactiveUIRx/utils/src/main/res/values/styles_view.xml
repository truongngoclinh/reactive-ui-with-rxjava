<resources>
    <style name="DialogTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Text" parent="RobotoR.16">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="Text.Singleline">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSecondary" parent="RobotoR.14">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TextSecondary.Singleline">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextChat" parent="RobotoR.14">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="TextChatSmall" parent="RobotoR.12">
        <item name="android:textColor">@color/main_light</item>
    </style>

    <style name="DialogButtonText" parent="Text.Singleline">
        <item name="android:layout_height">@dimen/diglog_button_height</item>
        <item name="android:layout_margin">@dimen/diglog_button_margin</item>
        <item name="android:background">@drawable/default_item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/item_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/item_horizontal_padding</item>
        <item name="android:textColor">@color/dialog_button_text</item>
    </style>

    <style name="ActionBarTitle" parent="RobotoR.20">
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button" parent="Text.Singleline">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:textColor">@color/btn_text_selector</item>
        <item name="android:background">@drawable/btn_white_corner_shadow_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Red">
        <item name="android:textColor">@color/common_white_bg</item>
        <item name="android:background">@drawable/button_selector_red</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.Game">
        <item name="android:layout_height">@dimen/game_list_button_height</item>
        <item name="android:textColor">@color/common_white_bg</item>
        <item name="android:background">@drawable/games_btn_bg</item>
        <item name="android:textSize">@dimen/default_text_size_secondary</item>
    </style>

    <style name="UnreadRedDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/red_dot</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider_size</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="ListView.Inset">
        <item name="android:divider">@drawable/inset_divider</item>
    </style>

    <style name="CircleImageView">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="ChatCell">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="NotificationCell">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
</resources>
