<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/default_red</item>
        <item name="colorAccent">@color/default_red</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/action_bar_bg</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!--material dialog-->
        <item name="md_background_color">@color/common_white</item>
        <item name="md_content_color">@color/default_gray</item>
        <item name="md_title_color">@color/default_red</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/main_bg_light</item>
        <item name="android:actionModeBackground">@drawable/bck_navigationbar</item>
        <item name="android:actionModeStyle">@style/BaseActionMode</item>
        <item name="actionModeStyle">@style/BaseActionMode</item>
        <item name="android:actionBarStyle">@style/BaseToolBar</item>
        <item name="actionBarStyle">@style/BaseToolBar</item>
        <item name="actionBarTheme">@style/BaseToolBarTheme</item>
        <item name="actionBarWidgetTheme">@style/BaseToolBarTheme</item>
        <item name="colorControlActivated">@color/default_red</item>
        <item name="colorSwitchThumbNormal">@color/default_gray</item>
        <item name="android:colorForeground">@color/default_gray</item>
        <item name="subtitleTextStyle">@style/SubtitleTextStyle</item>
        <item name="subtitleTextAppearance">@style/SubtitleTextStyle</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#000000</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#000000</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>